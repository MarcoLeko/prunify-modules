{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmit": true,
    "lib": ["ES2022", "dom"]
  },
  "include": [
    "./src/**/*"
  ]
}
